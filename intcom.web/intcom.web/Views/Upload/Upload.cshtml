@model intcom.web.Models.UploadModel

@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style_contoso.css" rel="stylesheet" />



</head>
<body class="text-center">

    <div>
        @using (Html.BeginForm("Upload", "Upload", FormMethod.Post, new { encType = "multipart/form-data", @class = "form-signin" }))
        {


            @Html.AntiForgeryToken();

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="container">
                <div class="form-login">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="panel-title">Upload File</div>
                        </div>

                        <div style="padding-top:30px" class="panel-body text-center">
                            <div style="display:none" id="result" class="alert alert-danger col-sm-12">

                            </div>

                            <div style="margin-top:10px" class="form-group">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form - group" })
                            </div>
                            <div style="margin-top:15px" class="form-group">
                                <center>
                                    @Html.TextBoxFor(m => m.Files, new { type = "file", name = "Files", @class = "btn form - group" })<br /><br />
                                </center>
                            </div>
                            <div style="margin-top:10px" cclass="form-group">
                                <input type="submit" value="Upload" name="submitme" id="submitme" class="btn btn-primary btn-group-sm" />
                            </div>

                            <div style="margin-top:10px" class="form-group">

                                <div class="col-sm-12 controls">
                                    <input type="submit" value="Acessar" class="btn primary btn-lg" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <script src="~/scripts/jquery-1.10.2.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>

</body>
</html>


